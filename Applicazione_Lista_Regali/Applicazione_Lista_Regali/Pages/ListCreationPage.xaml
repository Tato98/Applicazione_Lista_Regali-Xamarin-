<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Title="Crea una nuova lista"
             x:Class="Applicazione_Lista_Regali.ListCreationPage">
    
    <ContentPage.Content>

        <StackLayout
            Padding="10">

            <Entry
                x:Name="nomeLista"
                Placeholder="Nome"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"
                Keyboard="Text"
                MaxLength="15"
                Margin="10"/>
            <Entry
                x:Name="descrizioneLista"
                Placeholder="Descrizione"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"
                Keyboard="Text"
                MaxLength="50"
                Margin="10"/>
            <StackLayout
                Orientation="Horizontal">

                <Entry
                    x:Name="budgetLista"
                    Placeholder="Budget"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    Keyboard="Numeric"
                    MaxLength="10"
                    Margin="10"/>
                
                <ImageButton
                    Source="contact.png"
                    WidthRequest="60"
                    HeightRequest="60"
                    BackgroundColor="Transparent"
                    Clicked="ButtonContacts_Clicked"
                    Margin="10">
                </ImageButton>

            </StackLayout>

            <StackLayout
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">

                <ListView
                    x:Name="contactList"
                    RowHeight="70"
                    SelectionMode="None"
                    SeparatorColor="Black">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell >
                                <StackLayout
                                    BackgroundColor="#FFE6DE"
                                    Orientation="Horizontal">

                                    <StackLayout
                                        Padding="10">

                                        <Label 
                                            Text="{Binding Nome}"
                                            FontSize="18"
                                            FontAttributes="Bold" >
                                        </Label>

                                        <Label 
                                            Text="{Binding Numero}"
                                            FontSize="12"
                                            FontAttributes="Italic">
                                        </Label>

                                    </StackLayout>

                                    <StackLayout
                                        Padding="10"
                                        HorizontalOptions="EndAndExpand"
                                        VerticalOptions="CenterAndExpand">

                                        <ImageButton
                                            CommandParameter="{Binding .}"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center"
                                            Source="clear.png"
                                            WidthRequest="20"
                                            HeightRequest="20"
                                            Clicked="ClearButton_Clicked">
                                        </ImageButton>

                                    </StackLayout>

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
                
            </StackLayout>

            <StackLayout
                Orientation="Horizontal">

                <Button
                    Text="cancella"
                    Clicked="ButtonCancel_Clicked"
                    HorizontalOptions="StartAndExpand"
                    VerticalOptions="Start"
                    TextColor="White"
                    BackgroundColor="OrangeRed"
                    Margin="10">
                </Button>

                <Button
                    Text="crea"
                    Clicked="ButtonCreate_Clicked"
                    TextColor="White"
                    BackgroundColor="OrangeRed"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="10">
                </Button>

            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>